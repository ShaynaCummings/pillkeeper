<div>
  <%= image_tag("pillkeeperlogo.png", alt: "pillkeeper logo")%>
  <%= "Hello #{current_user.email}!" %>
  <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
  <hr />
</div>

<h2>View Medications</h2>

<table class="table table-hover table-bordered table-responsive">
  <tr>
    <th>Med Name</th>
    <th>Dosage</th>
    <th>Time of Day</th>
    <th>Med Info</th>
    <th>Prescriber Name</th>
    <th>Prescriber Email</th>
    <th></th>
    <th></th>
  </tr>
  
  <% @meds.each do |med| %>
    <tr>
      <td><%= med.med_name %></td>
      <td><%= med.dosage %></td>
      <td><%= med.time_of_day %></td>
      <td> <a href="#">lookup</a> </td>
      <td><%= med.prescriber %></td>
      <td><%= med.email %></td>
      <td><%= link_to " view ", med %></td>
      <td><%= link_to " edit ", edit_med_path(med) %></td>
      <td><%= link_to " delete ", med_path(med),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this med?' } %></td>
  <% end %>
      </tr>
</table>
<p><%= link_to "add new med", new_med_path %></p>