<div>
  <%= image_tag("pillkeeperlogo.png", alt: "pillkeeper logo")%>
  <%= "Hello #{current_user.email}!" %>
  <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
  <hr />
</div>

<h2>View Medications</h2>

<table class="center">
<th>
  <tr>
    <td>Med Name </td>
    <td>Dosage</td>
    <td>Time of Day</td>
    <td>Prescriber Name</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </th>
  
  <% @meds.each do |med| %>
    <tr>
      <td><%= med.med_name %></td>
      <td><%= med.dosage %></td>
      <td><%= med.time_of_day %></td>
      <td><%= med.prescriber %></td>
      <td><%= link_to " view ", med %></td>
      <td><%= link_to " edit ", edit_med_path(med) %></td>
      <td><%= link_to " delete ", med_path(med),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this med?' } %></td>
  <% end %>
      </tr>
</table>
<p><%= link_to "add new med", new_med_path %></p>