<div>
  <%= link_to image_tag("pillkeeperlogo.png", alt: "pillkeeper logo"), root_path %>
  Hello <%= link_to "#{current_user.first_name}!", user_path(current_user.id)  %>
  <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
  <hr />
</div>

<h2>View Medications</h2>

<table class="table table-hover table-bordered table-responsive">
  <tr>
    <th>Med Name</th>
    <th>Dosage</th>
    <th>Time of Day</th>
    <th>Med Info</th>
    <th>Prescriber Name</th>
    <th>Prescriber Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <%   @meds.each do |med| %>
    <% if current_user.id == med.user_id %>
    <tr>
      <td><%= med.med_name %></td>
      <td><%= med.dosage %></td>
      <td><%= med.time_of_day %></td>
      <td><%= link_to "view info", med %></td>
      <td><%= med.prescriber %></td>
      <td><%= med.email %></td>
      <td><%= link_to " view ", med,  data: { confirm: "View the DailyMed Entry?" } %></td>
      <td><%= link_to " edit ", edit_med_path(med) %></td>
      <td><%= link_to " delete ",  { action: :destroy, id: med.id }, method: :delete, data: { confirm: 'Are you sure you want to delete this med?' } %></td>
      <td><%= med.user_id %></td>
      <% end %>
      <% end %>
      </tr>
</table>
<p><%= link_to "add new med", new_med_path %></p>