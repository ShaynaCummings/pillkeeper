<h2>Medication List</h2>

<table class="table table-hover table-bordered table-responsive">
  <tr>
    <th>Medication<%= sortable_column " (sort)", :column => "med_name" %></th>
    <th>Dosage</th>
    <th>Time of Day</th>
    <th>Prescriber <%= sortable_column " (sort)", :column => "prescriber" %></th>
    <th>Prescriber Email</th>
    <th>Prescriber Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <%   @meds.each do |med| %>
    <% if current_user.id == med.user_id %>
    <tr>
      <td><%= link_to "#{med.med_name}", med %></td>
      <td><%= med.dosage %></td>
      <td><%= med.time_of_day %></td>
      <td><%= med.prescriber %></td>
      <td><%= med.email %></td>
      <td><%= med.phone %></td>
      <td><%= link_to " dailymed" , med_path(@med), :class => "submit_button", :onclick => 'return openPopup(this);' %>
      <td><%= link_to " edit ", edit_med_path(med) %></td>
      <td><%= link_to " delete ",  { action: :destroy, id: med.id }, method: :delete, data: { confirm: 'Are you sure you want to delete this med?' } %></td>
      <% end %>
      <% end %>
      </tr>
</table>
<p><%= link_to "Add New Medication", new_med_path %></p>
