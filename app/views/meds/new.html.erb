<div>
  <%= image_tag("pillkeeperlogo.png", alt: "pillkeeper logo")%>
  <%= "Hello #{current_user.email}!" %>
  <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
  <%= link_to 'my meds', meds_path, method: :get %>
  <hr />
</div>

<h2>Add a new medication</h2>

<form class="form-horizontal" role="form">
  <div class="form-group">
<%= form_for @med do |f| %>

  <% if @med.errors.any? %>
      <h3> <%= pluralize(@med.errors.count, "error") %> prohibited this medication from being saved </h3>
      <ul>
      <% @med.errors.full_messages.each do |message| %>
          <li><%= message %> </li>
      <% end %>
      </ul>
  <% end %>

<p> <%= f.label "Med Name" %>
    <%= f.text_field :med_name, :placeholder => "enter your med name" %> 
</p>
<p> <%= f.label "Dosage" %>
    <%= f.text_field :dosage %> 
</p>
<p> <%= f.label "Time of Day" %>
    <%= f.text_field :time_of_day %> 
</p>
<p> <%= f.label "Prescriber Name" %>
    <%= f.text_field :prescriber %> 
</p>
    <p> <%= f.label "Prescriber Email" %>
    <%= f.text_field :email %> 
</p>

  <p>
    <%= f.submit "Add new med" %>
  </p>
  </div>
</form>
<% end %>