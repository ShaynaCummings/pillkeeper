<h2>Add a new medication</h2>

<div class="form-group">
  <%= form_for @med do |f|  %>
  
    <% if @med.errors.any? %>
        <h3> <%= pluralize(@med.errors.count, "error") %> prohibited this medication from being saved </h3>
        <ul>
        <% @med.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
        <% end %>
        </ul>
    <% end %>
  
  <p> <%= f.label "Medication" %>
      <%= f.text_field :med_name, :placeholder => "Enter the medication name" %> 
  </p>
  <p> <%= f.label "Dosage" %>
      <%= f.text_field :dosage %> 
  </p>
  <p> 
      <%= f.label "Time of Day" %>
      <%= f.text_field :time_of_day, :placeholder => "e.g., breakfast or bedtime" %>
  </p>
      
  <p> <%= f.label "Prescriber Name" %>
      <%= f.text_field :prescriber %> 
  </p>
  <p>
    <%= f.label "Prescriber Email" %>
    <%= f.text_field :email %> 
  </p>
  
<p> <%= f.label "Prescriber Phone" %>
    <%= f.text_field :phone %> 
</p>
      
  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <p>
     <%= f.submit "Add this med" %>
  </p>
  
  <% end %>
</div>

